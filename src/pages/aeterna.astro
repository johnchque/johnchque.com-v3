                    margin-bottom: 16px;
                }

                .feature-card h3 {
                    font-size: 18px;
                }

                .feature-card p {
                    font-size: 13px;
                }

                /* Use Cases */
                .use-cases-grid {
                    grid-template-columns: 1fr;
                    gap: 16px;
                }

                .use-case {
                    padding: 24px;
                }

                /* Steps */
                .steps {
                    grid-template-columns: 1fr;
                    gap: 40px;
                    margin-top: 48px;
                }

                .step-number {
                    width: 48px;
                    height: 48px;
                    font-size: 20px;
                    margin-bottom: 20px;
                }

                .step h3 {
                    font-size: 18px;
                }

                .step p {
                    font-size: 13px;
                }

                /* Comparison Table */
                .comparison-table {
                    border-radius: 8px;
                }

                .comparison-table th,
                .comparison-table td {
                    padding: 12px;
                    font-size: 11px;
                }

                .comparison-table th:first-child,
                .comparison-table td:first-child {
                    position: sticky;
                    left: 0;
                    background: #0a0a0a;
                    z-index: 1;
                }

                .comparison-table th:first-child {
                    background: #000000;
                }

                /* Testimonials */
                .testimonials {
                    grid-template-columns: 1fr;
                    gap: 16px;
                    margin-top: 40px;
                }

                .testimonial {
                    padding: 24px;
                }

                .testimonial-text {
                    font-size: 14px;
                    margin-bottom: 20px;
                }

                /* Final CTA */
                .final-cta {
                    padding: 80px 0;
                }

                .final-cta::before {
                    width: 500px;
                    height: 300px;
                }

                .final-cta h2 {
                    font-size: 36px;
                    margin-bottom: 20px;
                }

                .final-cta p {
                    font-size: 16px;
                    margin-bottom: 32px;
                }

                .final-cta .cta-button {
                    font-size: 15px;
                    padding: 12px 24px;
                    width: 100%;
                }

                /* Footer */
                footer {
                    padding: 60px 0 32px;
                }

                .footer-content {
                    grid-template-columns: repeat(2, 1fr);
                    gap: 32px;
                    margin-bottom: 40px;
                }

                .footer-section h3 {
                    font-size: 13px;
                    margin-bottom: 12px;
                }

                .footer-section a {
                    font-size: 12px;
                    margin-bottom: 6px;
                }

                .footer-bottom {
                    padding-top: 32px;
                    font-size: 12px;
                }
            }

            /* Small mobile styles (320px - 480px) */
            @media (max-width: 480px) {
                .container {
                    padding: 0 12px;
                }

                .logo {
                    font-size: 20px;
                }

                .logo-icon {
                    width: 28px;
                    height: 28px;
                    font-size: 16px;
                }

                .hero h1 {
                    font-size: 32px;
                }

                .hero .subtitle {
                    font-size: 16px;
                }

                .hero .description {
                    font-size: 14px;
                }

                .section-header h2 {
                    font-size: 28px;
                }

                .feature-card,
                .use-case,
                .testimonial {
                    padding: 20px;
                }

                .final-cta h2 {
                    font-size: 28px;
                }

                .final-cta p {
                    font-size: 14px;
                }

                .footer-content {
                    grid-template-columns: 1fr;
                    gap: 24px;
                }

                .comparison-table th,
                .comparison-table td {
                    padding: 10px 8px;
                    font-size: 10px;
                }
            }
        </style>
    </head>

