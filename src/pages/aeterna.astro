                    gap: 12px;
                    font-size: 12px;
                }

                /* Demo Section */
                .demo-section {
                    padding: 20px 0 60px;
                }

                .demo-placeholder {
                    font-size: 14px;
                }

                /* Sections */
                .features,
                .use-cases,
                .how-it-works,
                .comparison,
                .social-proof {
                    padding: 60px 0;
                }

                .section-header {
                    margin-bottom: 48px;
                }

                .section-header h2 {
                    font-size: 32px;
                    margin-bottom: 12px;
                }

                .section-header p {
                    font-size: 14px;
                }

                /* Features Grid */
                .features-grid {
                    grid-template-columns: 1fr;
                }

                .feature-card {
                    padding: 28px;
                }

                .feature-icon {
